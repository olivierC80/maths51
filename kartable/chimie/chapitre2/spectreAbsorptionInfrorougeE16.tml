    <script defer src="https://cdn.jsdelivr.net/npm/katex@0.16.10/dist/contrib/auto-render.min.js" crossorigin="anonymous"
        onload="renderMathInElement(document.body);"></script>

    <style>
        body {
            font-family: sans-serif;
            line-height: 1.6;
            margin: 20px;
        }
        .exercice-title {
            color: #0056b3; /* Kartable blue */
            border-bottom: 2px solid #0056b3;
            padding-bottom: 10px;
        }
        .question-block {
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
            background-color: #f9f9f9;
        }
        .question-block h2 {
            margin-top: 0;
            color: #333;
        }
        .options ul {
            list-style: none;
            padding: 0;
        }
        .options li {
            margin-bottom: 8px;
            padding: 8px; /* Adjust padding */
            border: 1px solid #eee;
            background-color: #fff;
            border-radius: 4px;
        }
        .answer-button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 10px;
            font-size: 0.9em;
        }
